<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EntMob_Xamarin.ValuesPage"
             xmlns:converters="clr-namespace:EntMob_Xamarin.Converters;assembly=EntMob_Xamarin"
            >
  <StackLayout Padding="0,20,0,0">
    <Label Text="Information about your last jogging session" FontAttributes="Bold" HorizontalOptions="Center" />
    <ListView x:Name="listView" ItemsSource="{Binding Humidities}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
			<ContentView Padding="10,0,0,0">
				<Label Text="{Binding Amount, Converter={StaticResource HumidityConverter}}" VerticalTextAlignment="Center" FontAttributes="Bold" />
			</ContentView>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
 
</ContentPage>