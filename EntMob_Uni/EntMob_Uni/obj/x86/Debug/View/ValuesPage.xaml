<Page
    x:Class="EntMob_Uni.View.ValuesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EntMob_Uni.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    DataContext="{Binding Source={StaticResource mainViewModelLocator}, Path=ValuesViewModel}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel VerticalAlignment="Center">
            <TextBlock x:ConnectionId='1' x:Name="WelcomeMessage" Text="Welcome" FontSize="36" Margin="4" TextAlignment="Center" RelativePanel.AlignHorizontalCenterWithPanel="True"></TextBlock>
            <TextBlock x:ConnectionId='2' x:Name="NameMessage" Text="Jonas Allard" HorizontalAlignment="Center" FontSize="26"
                       RelativePanel.Below="WelcomeMessage" RelativePanel.AlignHorizontalCenterWith="WelcomeMessage"/>
            <TextBlock x:ConnectionId='3' x:Name="InfoMessage" Text="Your Sessions:" HorizontalAlignment="Center" FontSize="20"
                       RelativePanel.Below="NameMessage" RelativePanel.AlignHorizontalCenterWith="NameMessage"/>

            <!--<ListView x:Name="SessionsList" RelativePanel.Below="NameMessage" RelativePanel.AlignHorizontalCenterWith="NameMessage">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Start}" 
                           Margin="20,0,20,8"
                           FontSize="20" 
                           FontStyle="Normal" 
                           FontWeight="SemiBold"
                           Foreground="ForestGreen"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <ScrollViewer x:ConnectionId='4' x:Name="SV" RelativePanel.Below="InfoMessage" RelativePanel.AlignHorizontalCenterWith="InfoMessage">
                <ListView ItemsSource="{Binding ListOfSessions}"
                          IsItemClickEnabled="True">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="ItemClick">
                            <core:InvokeCommandAction Command="{Binding ItemClickedCommand}" />
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Start}"
                                           />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>

            <Button x:ConnectionId='5' x:Name="BackButton" Content="Go Back" Background="DodgerBlue" Foreground="White" Width="80" HorizontalAlignment="Center" Margin="0.20" 
                    RelativePanel.Below="SV" RelativePanel.AlignHorizontalCenterWith="SV">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Click">
                        <core:InvokeCommandAction Command="{Binding BackCommand}"/>
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
            </Button>
           <!--
            <Button x:Name="DetailButton" Content="Go Back" Background="DodgerBlue" Foreground="White" Width="80" HorizontalAlignment="Center" Margin="0.20" 
                    RelativePanel.Below="BackButton" RelativePanel.AlignHorizontalCenterWith="BackButton">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Click">
                        <core:InvokeCommandAction Command="{Binding NextCommand}"/>
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
            </Button>-->
        </RelativePanel>
    </Grid>

</Page>

